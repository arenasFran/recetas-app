{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",        // sigue apuntando a tu backend/src
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],      // solo incluir el src del backend
  "exclude": ["frontend", "node_modules"]
}
